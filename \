<script setup>
import { FwbRange } from 'flowbite-vue'
import { ref } from 'vue'

const level = ref(230)
const emit = defineEmits(['levelEmit'])

//TODO: Fix slider (range)

const changeLevel = (levelInput) => {
  level.value = levelInput
  emit('levelEmit', level)
}
</script>

